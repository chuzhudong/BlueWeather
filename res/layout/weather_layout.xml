<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484E61" >
        
        <Button
			android:id="@+id/update"
			android:layout_width="27dp"
			android:layout_height="24dp"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:background="@drawable/update2" />
		<ImageView
		    android:id="@+id/gps_status"
		    android:layout_width="11dp"
		    android:layout_height="20dp"
		    android:layout_toLeftOf="@id/city_name"
		    android:layout_centerVertical="true"
		    android:background="@drawable/gps_on2"
		    android:visibility="invisible" />
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="24sp" />
        
        <Button
			android:id="@+id/setting"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:background="@drawable/setting2" />
    </RelativeLayout>
        
    <FrameLayout
        android:id="@+id/right_layout"
       	android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#484E61" >
        	
          	<fragment
        	    android:id="@+id/weather_fragment"
        	    android:name="com.example.blueweather.fragment.WeatherFragment"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent" />
<!-- 
        	<fragment
        	   	android:id="@+id/neterror_fragment"
        	    android:name="com.example.blueweather.fragment.NetErrorFragment"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent" />  -->
        </FrameLayout>

</LinearLayout>